{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "require": {
        "php": ">=7.2",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "^4@stable",
        "silverstripe/postgresql": "^2.1.0",
        "unclecheese/display-logic": "^2.0",
        "symbiote/silverstripe-gridfieldextensions": "^3.2",
        "symbiote/silverstripe-queuedjobs": "^4.3",
        "ramsey/uuid": "^3.8",
        "catalyst/silverstripe-active-directory": "^1.0.1",
        "symbiote/silverstripe-multivaluefield": "^5.0",
        "phptek/sentry": "^2.0",
        "tractorcow/silverstripe-colorpicker": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "phpro/grumphp": "^v0.14.2",
        "friendsofphp/php-cs-fixer": "^v2.13.1",
        "sensiolabs/security-checker": "^5.0.1",
        "squizlabs/php_codesniffer": "^3.3.2",
        "silverstripe/graphql-devtools": "^1.0@dev",
        "dnadesign/silverstripe-populate": "^2.0"
    },
    "repositories": {
        "catalyst/silverstripe-active-directory": {
            "type": "vcs",
            "url": "git@gitlab.catalyst.net.nz:SilverStripe/silverstripe-active-directory.git"
        }
    },
    "extra": {
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "install-frameworkmissing.html",
            "install.php",
            "web.config"
        ],
        "expose": [
            "app/css",
            "themes/sdlt/dist"
        ]
    },
    "suggest": {
        "phptek/sentry": "Advanced logging of bugs and exceptions throughout your codebase"
    },
    "config": {
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "post-update-cmd": [
            "composer vendor-expose"
        ],
        "post-install-cmd": [
            "composer vendor-expose"
        ],
        "build": "sudo chown -R www-data ./public/assets && sudo -u www-data ./vendor/bin/sake /dev/build flush=all",
        "bundle": "cd /vagrant/themes/sdlt/ && yarn run build"
    }
}
